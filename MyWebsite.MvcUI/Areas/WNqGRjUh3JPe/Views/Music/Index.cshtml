@using MyWebsite.Entities.Concrete
@model List<Music>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/WNqGRjUh3JPe/Views/Shared/_AdminLayout.cshtml";
    ViewBag.DashboardTitle = "Müzik Listesi";
    ViewBag.Dashboard = "Dashboard / Müzik Listesi";
}


<div class="row">
    <div class="col-md-2"><a asp-area="WNqGRjUh3JPe" asp-controller="Music" asp-action="AddMusic" type="button" id="btnAddMusic" class=" btn btn-success">Yeni .mp3 Dosyası Ekle</a></div>

</div>

<br />
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
       Müzikler
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="musicTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Müzik Adı</th>
                        <th>İşlemler</th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>#</th>
                        <th>Müzik Adı</th>
                        <th>İşlemler</th>

                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var music in Model)
                    {
                        <tr name="@music.Id">
                            <td>@music.Id</td>
                            <td>@(music.Path.Substring(music.Path.IndexOf("/")+1))</td>
                            <td>                                
                                <button class="btn btn-danger btn-sm btn-delete" data-id="@music.Id"><span class="fas fa-minus-circle"></span></button>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts {

    <script src="~/js/musicIndex.js" type="application/ecmascript"></script>

}