@model MyWebsite.Entities.Dtos.NewsUpdateDto

@{
    ViewData["Title"] = "Güncelle";
    Layout = "~/Areas/WNqGRjUh3JPe/Views/Shared/_AdminLayout.cshtml";
    ViewBag.DashboardTitle = "";
    ViewBag.Dashboard = "Dashboard / Haberler / Güncelle";
}

<form asp-controller="News" asp-action="UpdateNews" method="post" enctype="multipart/form-data">

    <div class="row mt-2">
        <div class="col-md-8">

            <div class="card">

                <div class="card-body">
                    <input type="hidden" value="@Model.Id" asp-for="Id" />
                    <div class="form-group">
                        <label for="articleTitle" asp-for="Title"></label>
                        <input type="text" id="articleTitle" class="form-control" placeholder="Haber Başlığı" asp-for="Title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="text-editor" asp-for="Content"></label>
                        <textarea id="text-editor" asp-for="Content"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>

                </div>
            </div>

        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    Temel Konfigürasyonlar

                </div>

                <div class="card-body">
                    <div class="form-group">
                        <label for="categoryList" asp-for="CategoryId"></label>
                        <select id="categoryList" class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories,"Id","Name"))">

                            <option></option>

                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="datePicker" asp-for="CreatedDate"></label>
                        <input type="text" id="datePicker" class="form-control" asp-for="CreatedDate" />
                        <span asp-validation-for="CreatedDate" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="thumbnailUpload" asp-for="ThumbnailFile">Haber Resim</label>
                        <input type="file" id="thumbnailUpload" accept="image/*" class="form-control-file" asp-for="ThumbnailFile" />
                        <span asp-validation-for="ThumbnailFile" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Thumbnail">Önceki Resim :</label>
                        <input asp-for="Thumbnail" type="hidden" />
                        <img class="my-image" src="~/img/@Model.Thumbnail" alt="Resim Bulunamadı." />
                    </div>

                    @*<div class="form-check">
                            <input type="checkbox" id="isActive" class="form-check-input" asp-for="IsActive" />
                            <label for="isActive" class="form-check-label" asp-for="IsActive"></label>
                            <span asp-validation-for="IsActive" class="text-danger"></span>
                        </div>*@

                    <div class="form-check">
                        <button type="submit" class="btn btn-primary btn-block mt-4">Kaydet</button>

                    </div>

                </div>

            </div>

        </div>

    </div>


</form>

@section Scripts {
    <script src="~/DateTimePicker/js/jquery.datetimepicker.full.min.js"></script>
    <script src="~/DateTimePicker/js/jquery.datetimepicker.min.js"></script>
    <script src="~/js/newsUpdate.js" type="application/ecmascript"></script>
}

@section Styles {
    <link href="~/DateTimePicker/css/jquery.datetimepicker.min.css" rel="stylesheet" />
}