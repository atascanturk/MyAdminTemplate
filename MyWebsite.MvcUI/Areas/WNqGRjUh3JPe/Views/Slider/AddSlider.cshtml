@model MyWebsite.MvcUI.Areas.Admin.Models.SliderAddViewModel
@{
    ViewData["Title"] = "Yeni bir slider fotoğrafı ekle";
    Layout = "~/Areas/WNqGRjUh3JPe/Views/Shared/_AdminLayout.cshtml";
    ViewBag.DashboardTitle = "Yeni bir slider fotoğrafı ekle";
    ViewBag.Dashboard = "Dashboard / Slider / Slider Ekle";
}


<form asp-controller="Slider" asp-action="AddSlider" method="post" enctype="multipart/form-data">

    <div class="row mt-2">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    Dosya Ekleme

                </div>

                <div class="card-body">


                    <div class="form-group">
                        <label for="thumbnailUpload" asp-for="SliderPic">Lütfen slider'da görüntülenmesini istediğiniz resmi seçiniz.</label>
                        <input type="file" id="thumbnailUpload" accept="image/*" class="form-control-file" asp-for="SliderPic" />
                        <span asp-validation-for="SliderPic" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="title" asp-for="Title"></label>
                        <input type="text" id="title" class="form-control" asp-for="Title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="text-editor" asp-for="Content"></label>
                        <textarea id="text-editor" asp-for="Content"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>

                    <div class="form-check">
                        <button type="submit" class="btn btn-primary btn-block mt-4">Kaydet</button>

                    </div>

                </div>

            </div>

        </div>

    </div>


</form>

<br />

<a asp-area="WNqGRjUh3JPe" asp-controller="Slider" asp-action="Index" class="btn btn-success">Bir Üst Menüye Dönmek İçin Tıklayın</a>

@section Scripts{
    <script src="~/js/newsAdd.js" type="application/ecmascript"></script>
}