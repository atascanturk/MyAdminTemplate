@using MyWebsite.Entities.Concrete
@model List<Category>

@{
    ViewData["Title"] = "Kategori";
    Layout = "~/Areas/WNqGRjUh3JPe/Views/Shared/_AdminLayout.cshtml";
    ViewBag.DashboardTitle = "Kategori Listesi";
    ViewBag.Dashboard = "Dashboard / Kategori";
    var i = 1;
}

<div class="row">
    <div class="col-md-2"><a asp-area="WNqGRjUh3JPe" asp-controller="Category" asp-action="AddCategory" type="button" id="btnAddMusic" class=" btn btn-success">Yeni Kategori Ekle</a></div>

</div>

<br />
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Müzikler
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="categoryDataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Kategori Adı</th>
                        <th>Kategori Tipi</th>
                        <th>İşlemler</th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>#</th>                       
                        <th>Kategori Adı</th>
                        <th>Kategori Tipi</th>
                        <th>İşlemler</th>

                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr name="@category.Id">
                            <td>@i</td>
                            <td>@category.Name</td>
                            <td>@(category.CategoryType==1 ? "Haber" : ( category.CategoryType == 2 ? "Resim" : "Yönetim"))</td>
                            <td>
                                <a class="btn btn-primary btn-sm btn-update" data-id="@category.Id" asp-area="WNqGRjUh3JPe" asp-controller="Category" asp-action="Update" asp-route-id="@category.Id"><span class="fas fa-edit"></span></a>
                                <button class="btn btn-danger btn-sm btn-delete" data-id="@category.Id"><span class="fas fa-minus-circle"></span></button>
                            </td>
                        </tr>
                        i++;
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts {

    <script src="~/js/categoryIndex.js" type="application/ecmascript"></script>

}

