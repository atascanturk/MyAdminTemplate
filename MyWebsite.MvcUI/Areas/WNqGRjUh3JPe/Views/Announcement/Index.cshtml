@using MyWebsite.Entities.Concrete
@model List<Announcement>

@{
    ViewData["Title"] = "Duyurular";
    Layout = "~/Areas/WNqGRjUh3JPe/Views/Shared/_AdminLayout.cshtml";
    ViewBag.DashboardTitle = "Duyuru Listesi";
    ViewBag.Dashboard = "Dashboard / Duyurular";
    var i = 1;
}

<div><a asp-area="WNqGRjUh3JPe" asp-controller="Announcement" asp-action="AddAnnouncement" type="button" id="btnAddNews" class=" btn btn-success">Yeni Duyuru Ekle</a></div>
<br />
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Son Paylaşılan Duyurular
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="announcementTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>                        
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>                        
                        <th>İşlemler</th>

                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var announcement in Model)
                    {
                        <tr name="@announcement.Id">
                            <td>@i</td>
                            <td>@announcement.Title</td>                            
                            <td>
                                <a class="btn btn-primary btn-sm btn-update" data-id="@announcement.Id" asp-area="WNqGRjUh3JPe" asp-controller="Announcement" asp-action="UpdateAnnouncement" asp-route-id="@announcement.Id" asp-route-title="@announcement.Id"><span class="fas fa-edit"></span></a>
                                <button class="btn btn-danger btn-sm btn-delete" data-id="@announcement.Id" ><span class="fas fa-minus-circle"></span></button>

                            </td>
                        </tr>
                        i++;
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/announcementIndex.js" type="application/ecmascript"></script>
}
