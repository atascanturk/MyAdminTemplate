@model MyWebsite.Entities.Dtos.AnnouncementUpdateDto
@{
    ViewData["Title"] = "Güncelle";
    Layout = "~/Areas/WNqGRjUh3JPe/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Dashboard = "Dashboard / Duyurular / Güncelle";
}


<form asp-controller="Announcement" asp-action="UpdateAnnouncement" method="post" enctype="multipart/form-data">

    <div class="row mt-2">
        <div class="col-md-8">

            <div class="card">

                <div class="card-body">

                    <input type="hidden" value="@Model.Id" asp-for="Id" />
                    <div class="form-group">
                        <label for="articleTitle" asp-for="Title"></label>
                        <input type="text" id="articleTitle" class="form-control" placeholder="Duyuru Başlığı" asp-for="Title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="text-editor" asp-for="Content"></label>
                        <textarea id="text-editor" asp-for="Content"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>

                </div>


            </div>

            <div class="form-check">
                <button type="submit" class="btn btn-primary btn-block mt-4">Kaydet</button>

            </div>

        </div>

    </div>


</form>

@section Scripts{
    <script src="~/js/newsAdd.js" type="application/ecmascript"></script>
}
