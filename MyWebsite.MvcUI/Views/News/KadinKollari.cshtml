@using MyWebsite.Entities.Concrete
@using System.Text.RegularExpressions;

@model List<News>

@{
    ViewData["Title"] = "Kadın Kolları Haberleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Regex regex = new Regex("<[^>]*>");
    Regex regexnbsp = new Regex("&nbsp;");
}


<input id="navItemValue" type="hidden" value="kadinKollari" />
<div class="main-content-w3layouts-agileits mt-3">
    <div class="course_demo1">
        <div class="row">
            <!--left-->
            <div class="col-lg-12 left-blog-info-w3layouts-agileits text-center">

                <div class="custom-title">
                    <h2>KADIN KOLLARI</h2>
                </div>
                <br />

                <div class="row">
                    @foreach (var news in Model)
                    {
                        <div class="col-md-3 blog-grid-top">
                            <div class="b-grid-top">
                                <div class="blog_info_left_grid">                                  
                                    <a href="/Haberler/@news.Id/@news.Title">
                                        <img src="~/img/@news.Thumbnail" class="img-fluid" alt="">
                                    </a>
                                </div>                               
                                <h3>
                                    <a asp-action="Haberler" asp-route-id="@news.Id" asp-route-title="@news.Title"> @news.Title</a>
                                </h3>
                                @{ news.Content = regex.Replace(news.Content, ""); }
                                @{ news.Content = regexnbsp.Replace(news.Content, ""); }

                                <p> @(news.Content.Length >= 200 ? news.Content.Substring(0, (news.Content.Substring(0,200).LastIndexOf(" "))) : news.Content )...</p>

                            </div>
                            <ul class="blog-icons">
                                <li>
                                    <a href="/Haberler/@news.Id/@news.Title">
                                        <i class="fas fa-eye"></i> Habere Git
                                    </a>
                                </li>
                            </ul>
                        </div>
                    }


                </div>
            </div>

            <!--//left-->

        </div>
    </div>
</div>


