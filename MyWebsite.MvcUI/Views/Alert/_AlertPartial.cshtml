@model MyWebsite.Entities.Concrete.Alert

<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">                
                <button type="button" class="close" data-dismiss="modal" aria-label="İptal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                @{
                    if (Model.FilePath.Contains(".mp4"))
                    {
                        <div style="height:500px;">
                            <video autoplay muted loop playsinline style="height:100%">
                                <source src="~/img/@Model.FilePath" type="video/mp4">
                            </video>
                        </div>

                    }

                    else
                    {
                        <div style="height:500px;">
                            <img src="~/img/@Model.FilePath" style="height:100%" alt="Resim Bulunamadı." />

                        </div>
                    }

                }


            </div>
            <div class="modal-footer">

                @Model.Content
            </div>
        </div>
    </div>
