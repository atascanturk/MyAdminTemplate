                    </a>
                </li>

            </ul>
        </div>
        <div class="tech-btm duyurular">
            <h4>Duyurular</h4>

            @foreach (var announcement in Model.Announcements)
            {
                       <div class="blog-grids row mb-3">
                <h5>
                    <a href="/Duyuru/@announcement.Id/@announcement.Title">
                     @announcement.Title
                        <div class="col-md-12 blog-grid-right">

                            <div class="sub-meta">
                                <span>
                                    <i class="far fa-clock"></i>  @announcement.CreatedDate.ToString("dd/MM/yyyy HH:mm")
                                </span>
                            </div>
                        </div>
                    </a>
                </h5>
            </div>
            }
     
       

        </div>
    </div>
