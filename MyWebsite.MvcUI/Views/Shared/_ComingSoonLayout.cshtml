    <style>
        @@media screen and (max-width: 600px) {
            #x-scroll-off {
                max-width: 100%;
                overflow-x: hidden;
            }

            #gearGif {
                margin-left: 20px;
            }
        }

        @@media screen and (min-width: 600px) and (max-width: 768px) {

            #gearGif {
                margin-left: 100px;
            }
        }

        @@media screen and (min-width: 768px) {          

            #gearGif {
                margin-left: 250px;
            }
        }

        @@media screen and (min-width: 1100px) {
            #gearGif {
                margin-left: 316px;
            }
        }        

    </style>
</head>
<body  id="x-scroll-off">

    <!--  -->
    <div class="simpleslide100">
        <div class="simpleslide100-item bg-img1" style="background-image: url('ComingSoon/images/Bg_Main.jpg');"></div>
        <div class="simpleslide100-item bg-img1" style="background-image: url('ComingSoon/images/Bg1.jpg');"></div>
        <div class="simpleslide100-item bg-img1" style="background-image: url('ComingSoon/images/Bg2.jpg');"></div>
        <div class="simpleslide100-item bg-img1" style="background-image: url('ComingSoon/images/Bg3.jpg');"></div>
        <div class="simpleslide100-item bg-img1" style="background-image: url('ComingSoon/images/Bg4.jpg');"></div>
    </div>

    <div class="flex-col-c-sb size1 overlay1">
        <!--  -->
        @*<div class="w-full flex-w flex-sb-m p-l-80 p-r-80 p-t-22 p-lr-15-sm">
                <div class="wrappic1 m-r-30 m-t-10 m-b-10">
